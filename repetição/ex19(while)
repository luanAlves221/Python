while True:
    print("1. Somar dois números")
    print("2. Subtrair dois números")
    print("3. Multiplicar dois números")
    print("4. Dividir dois números")
    print("5. Sair")

    opc = int(input("Escolha uma opção: "))  # Coloca dentro do loop

    if opc == 1:
        s1 = int(input("Digite o primeiro número: "))
        s2 = int(input("Digite o segundo número: "))
        rSoma = s1 + s2
        print("A soma dos dois números é:", rSoma)
    elif opc == 2:
        s1 = int(input("Digite o primeiro número: "))
        s2 = int(input("Digite o segundo número: "))
        rSub = s1 - s2
        print("A subtração dos dois números é:", rSub)
    elif opc == 3:
        s1 = int(input("Digite o primeiro número: "))
        s2 = int(input("Digite o segundo número: "))
        rMult = s1 * s2
        print("A multiplicação dos dois números é:", rMult)
    elif opc == 4:
        s1 = int(input("Digite o primeiro número: "))
        s2 = int(input("Digite o segundo número: "))
        rDiv = s1 / s2
        print("A divisão dos dois números é:", rDiv)
    elif opc == 5:
        print("Saindo...")
        break
    else:
        print("Opção inválida. Tente novamente.")
